<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, #612ccd 0%, #541170 99%, #8902ff 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .forms-container {
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 2rem;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .section-title {
            color: white;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .button {
            display: inline-block;
            background-color: #4299e1;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .button:hover {
            background-color: #3182ce;
        }

        .list, .lookup {
            margin-top: 20px;
            display: none;
        }

        .list.active, .lookup.active {
            display: block;
        }

        .note {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 5px;
            padding: 1rem;
            margin-bottom: 1rem;
            color: white;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        ul li {
            padding: 10px 15px;
            background: rgba(255, 255, 255, 0.1);
            margin-bottom: 5px;
            border-radius: 5px;
            color: white;
        }
    </style>
</head>
<body>
    <div class="forms-container">
        <h1 class="section-title">Members</h1>
        <button class="button" id="show-list">Full Members List</button>
        <button class="button" id="show-lookup">Member Lookup</button>

        <!-- Full Members List -->
        <div class="list" id="members-list">
            <h2 class="section-title">Full Members List</h2>
            <ul id="members-ul"></ul>
        </div>

        <!-- Member Lookup -->
        <div class="lookup" id="member-lookup">
            <h2 class="section-title">Member Lookup</h2>
            <input type="text" id="lookup-input" placeholder="Enter username">
            <button class="button" id="lookup-btn">Search</button>
            <div id="profile-container"></div>
        </div>
    </div>

    <script>
        const membersList = document.getElementById('members-list');
        const memberLookup = document.getElementById('member-lookup');
        const showListBtn = document.getElementById('show-list');
        const showLookupBtn = document.getElementById('show-lookup');
        const membersUl = document.getElementById('members-ul');
        const lookupInput = document.getElementById('lookup-input');
        const lookupBtn = document.getElementById('lookup-btn');
        const profileContainer = document.getElementById('profile-container');

        showListBtn.addEventListener('click', async () => {
            membersList.classList.add('active');
            memberLookup.classList.remove('active');
            membersUl.innerHTML = '';
            try {
                const res = await fetch('/members/list');
                const data = await res.json();
                if (data.success) {
                    data.members.forEach(member => {
                        const li = document.createElement('li');
                        li.textContent = member.username;
                        membersUl.appendChild(li);
                    });
                }
            } catch (err) {
                console.error('Error fetching members list:', err);
            }
        });

        showLookupBtn.addEventListener('click', () => {
            membersList.classList.remove('active');
            memberLookup.classList.add('active');
            profileContainer.innerHTML = '';
        });

        lookupBtn.addEventListener('click', async () => {
            const username = lookupInput.value.trim();
            if (!username) return;

            profileContainer.innerHTML = '<p>Loading...</p>';
            try {
                const res = await fetch(`/members/lookup/${username}`);
                const data = await res.json();
                if (data.success) {
                    const profile = data.profile;
                    profileContainer.innerHTML = `
                        <h3>${profile.user.username}</h3>
                        <p>Rank: ${profile.currentRank}</p>
                        <p>XP: ${profile.user.xp}</p>
                        <p>Placement: ${profile.placement}</p>
                    `;
                } else {
                    profileContainer.innerHTML = `<p>${data.message}</p>`;
                }
            } catch (err) {
                console.error('Error fetching profile:', err);
                profileContainer.innerHTML = '<p>Error fetching profile.</p>';
            }
        });
    </script>
</body>
</html>
