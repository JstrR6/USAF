<div class="space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold">Community Members</h2>
            <div class="flex space-x-2">
                <input type="text" placeholder="Search members..." 
                       class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Username</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Rank</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">XP</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% if (typeof members !== 'undefined' && members.length > 0) { %>
                        <% members.forEach(member => { %>
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap"><%= member.username %></td>
                                <td class="px-6 py-4 whitespace-nowrap"><%= member.highestRole %></td>
                                <td class="px-6 py-4 whitespace-nowrap"><%= member.xp %></td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="px-6 py-4 text-center text-gray-500">No members found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>