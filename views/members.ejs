<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, #612ccd 0%, #541170 99%, #8902ff 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 2rem;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .nav-menu {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .nav-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .search-container {
            margin-bottom: 2rem;
        }

        .profile-container {
            display: none;
            margin-top: 2rem;
        }

        .user-info {
            margin-bottom: 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 5px;
        }

        .note-container {
            margin-top: 1rem;
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 5px;
        }

        .note-container button {
            margin-top: 1rem;
        }

        .form-container {
            margin-top: 1.5rem;
            display: none;
        }

        textarea {
            width: 100%;
            padding: 0.75rem;
            margin-top: 0.5rem;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: black;
        }

        button {
            background: #4299e1;
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        button:hover {
            background: #3182ce;
        }

        .note {
            padding: 1rem;
            margin-bottom: 1rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="nav-menu">
            <a href="/dashboard" class="nav-item">Dashboard</a>
            <a href="/members" class="nav-item">Members</a>
            <a href="/forms" class="nav-item">Forms</a>
            <a href="/profile" class="nav-item">Profile</a>
        </nav>

        <div class="search-container">
            <input type="text" id="search-username" placeholder="Search by username" />
            <button id="search-btn">Search</button>
        </div>

        <div id="profile-container" class="profile-container">
            <div class="user-info">
                <h3 id="username-display"></h3>
                <p><strong>Rank:</strong> <span id="rank-display"></span></p>
                <p><strong>XP:</strong> <span id="xp-display"></span></p>
                <p><strong>Placement:</strong> <span id="placement-display"></span></p>
            </div>

            <div id="notes-section" class="note-container">
                <h4>Notes</h4>
                <div id="notes-list"></div>
                <button id="add-note-btn" style="display: none;">Add Note</button>
            </div>

            <div id="note-form" class="form-container">
                <textarea id="note-content" placeholder="Enter note content"></textarea>
                <button id="submit-note-btn">Submit Note</button>
            </div>
        </div>
    </div>

    <script>
        const searchBtn = document.getElementById('search-btn');
        const profileContainer = document.getElementById('profile-container');
        const usernameDisplay = document.getElementById('username-display');
        const rankDisplay = document.getElementById('rank-display');
        const xpDisplay = document.getElementById('xp-display');
        const placementDisplay = document.getElementById('placement-display');
        const notesList = document.getElementById('notes-list');
        const addNoteBtn = document.getElementById('add-note-btn');
        const noteForm = document.getElementById('note-form');
        const submitNoteBtn = document.getElementById('submit-note-btn');
        const noteContent = document.getElementById('note-content');
        const searchUsername = document.getElementById('search-username');

        let currentUsername = null;

        async function fetchProfile(username) {
            try {
                const res = await fetch(`/members/lookup/${username}`);
                const data = await res.json();

                if (data.success) {
                    const profile = data.profile;
                    currentUsername = profile.user.username;

                    usernameDisplay.textContent = profile.user.username;
                    rankDisplay.textContent = profile.currentRank;
                    xpDisplay.textContent = profile.user.xp || 0;
                    placementDisplay.textContent = profile.placement || 'None';
                    notesList.innerHTML = profile.notes
                        .map(note => `
                            <div class="note">
                                <p><strong>Type:</strong> ${note.noteType}</p>
                                <p><strong>Content:</strong> ${note.content}</p>
                                <p><small>Added By: ${note.addedBy}</small></p>
                                <p><small>Date: ${new Date(note.dateAdded).toLocaleString()}</small></p>
                            </div>
                        `)
                        .join('');
                    
                    profileContainer.style.display = 'block';

                    // Show Add Note button if user is an officer
                    if (profile.isOfficer) {
                        addNoteBtn.style.display = 'block';
                    }
                } else {
                    alert(data.message || 'User not found.');
                }
            } catch (err) {
                console.error('Error fetching profile:', err);
            }
        }

        searchBtn.addEventListener('click', () => {
            const username = searchUsername.value.trim();
            if (username) fetchProfile(username);
        });

        addNoteBtn.addEventListener('click', () => {
            noteForm.style.display = 'block';
        });

        submitNoteBtn.addEventListener('click', async () => {
            const content = noteContent.value.trim();

            if (!content || !currentUsername) {
                alert('Note content is required.');
                return;
            }

            try {
                const res = await fetch('/members/notes/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        username: currentUsername,
                        noteType: 'General',
                        content: content,
                    }),
                });

                const data = await res.json();
                if (data.success) {
                    alert('Note added successfully!');
                    fetchProfile(currentUsername); // Refresh profile
                } else {
                    alert(data.message || 'Failed to add note.');
                }
            } catch (err) {
                console.error('Error adding note:', err);
            }
        });
    </script>
</body>
</html>
