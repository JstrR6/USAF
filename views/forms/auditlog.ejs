<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USM Audit Log</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, #612ccd 0%, #541170 99%, #8902ff 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .audit-container {
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(10px);
            border-radius: 10px;
            padding: 2rem;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.37);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .nav-menu {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .nav-item {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .nav-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 10px;
            text-align: center;
            color: white;
        }

        .stat-number {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0.5rem 0;
        }

        .filters-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .filter-input {
            padding: 0.75rem;
            border: none;
            border-radius: 5px;
            background: rgba(0, 0, 0, 0.31);
            color: black;
        }

        .filter-input option {
            background: #541170;
            color: black;
        }

        .activity-card {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 1.5rem;
            color: black;
            margin-bottom: 1rem;
        }

        .activity-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .type-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.875rem;
            color: white;
            text-align: center;
        }

        .type-Training {
            background-color: #4299e1; 
        }

        .type-Promotion {
            background-color: #48bb78; 
        }

        .type-Award {
            background-color: #ed8936; 
        }

        .type-Placement {
            background-color: #9f7aea; 
        }

        .type-Note {
            background-color: #e53e3e; 
        }

        /* Type Colors */
        .type-Warning {
            background-color: #ed8936; /* Orange */
        }
        .type-General {
            background-color: #a0aec0; /* Gray */
        }
        .type-Recommendation {
            background-color: #48bb78; /* Green */
        }
        .type-Training {
            background-color: #4299e1; /* Blue */
        }

        /* Status Colors */
        .status-approved {
            background-color: #48bb78; /* Green */
            color: white;
            border-radius: 15px;
            padding: 0.25rem 0.75rem;
        }
        .status-pending {
            background-color: #ed8936; /* Orange */
            color: white;
            border-radius: 15px;
            padding: 0.25rem 0.75rem;
        }
        .status-rejected {
            background-color: #e53e3e; /* Red */
            color: white;
            border-radius: 15px;
            padding: 0.25rem 0.75rem;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.875rem;
        }

        .export-btn {
            background: #48bb78;
            color: white;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 1rem;
        }

        .export-btn:hover {
            background: #38a169;
            transform: translateY(-2px);
        }

        .no-activities {
            text-align: center;
            color: white;
            margin: 2rem 0;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 2rem;
        }

        .page-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            cursor: pointer;
        }

        .page-btn.active {
            background: #4299e1;
        }
    </style>
</head>
<body>
    <div class="audit-container">
        <h2>Audit Log</h2>

        <nav class="nav-menu">
            <a href="/dashboard" class="nav-item">Dashboard</a>
            <a href="/members" class="nav-item">Members</a>
            <a href="/forms" class="nav-item">Forms</a>
            <a href="/profile" class="nav-item">Profile</a>
        </nav>

        <div class="stats-container">
            <div class="stat-card">
                <div>Total Activities</div>
                <div class="stat-number"><%= stats.total %></div>
            </div>
            <div class="stat-card">
                <div>Trainings</div>
                <div class="stat-number"><%= stats.byType.Training %></div>
            </div>
            <div class="stat-card">
                <div>Promotions</div>
                <div class="stat-number"><%= stats.byType.Promotion %></div>
            </div>
            <div class="stat-card">
                <div>Awards</div>
                <div class="stat-number"><%= stats.byType.Award %></div>
            </div>
        </div>

        <a href="/forms/auditlog/export" class="export-btn">Export to CSV</a>

        <div class="filters-container">
            <input type="text" id="searchInput" placeholder="Search username/details..." class="filter-input">
            <select id="typeFilter" class="filter-input">
                <option value="all">All Types</option>
                <option value="Training">Training</option>
                <option value="Promotion">Promotion</option>
                <option value="Award">Award</option>
                <option value="Placement">Placement</option>
                <option value="Note">Notes</option>
            </select>
            <select id="statusFilter" class="filter-input">
                <option value="all">All Status</option>
                <option value="approved">Approved</option>
                <option value="pending">Pending</option>
                <option value="rejected">Rejected</option>
            </select>
            <select id="sortFilter" class="filter-input">
                <option value="newest">Newest First</option>
                <option value="oldest">Oldest First</option>
            </select>
        </div>

        <div class="activities-list">
            <% if (activities && activities.length > 0) { %>
                <% activities.forEach(activity => { %>
                    <div class="activity-card">
                        <div class="activity-row">
                            <strong>Type:</strong>
                            <span class="type-badge type-<%= activity.type %>">
                                <%= activity.type %>
                            </span>
                        </div>
                        <% if (activity.type === 'Note') { %>
                            <div class="activity-row">
                                <strong>Note Type:</strong>
                                <span><%= activity.status %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Content:</strong>
                                <span><%= activity.details %></span>
                            </div>
                        <% } else if (activity.type === 'Training') { %>
                            <div class="activity-row">
                                <strong>Trainer:</strong>
                                <span><%= activity.trainer %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Trainee(s):</strong>
                                <span><%= activity.trainees %></span>
                            </div>
                            <div class="activity-row">
                                <strong>XP Amount:</strong>
                                <span><%= activity.xpAmount %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Status:</strong>
                                <span class="<%= activity.status === 'Pending' ? 'status-pending' : 'status-approved' %>">
                                    <%= activity.status %>
                                </span>
                            </div>
                        <% } else if (activity.type === 'Promotion') { %>
                            <div class="activity-row">
                                <strong>User:</strong>
                                <span><%= activity.username %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Current Rank:</strong>
                                <span><%= activity.currentRank %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Promotion Rank:</strong>
                                <span><%= activity.promotionRank %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Submitted By:</strong>
                                <span><%= activity.submittedBy %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Date:</strong>
                                <span><%= new Date(activity.date).toLocaleString() %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Status:</strong>
                                <span class="<%= activity.status === 'Approved' ? 'status-approved' : 'status-rejected' %>">
                                    <%= activity.status %>
                                </span>
                            </div>
                            <div class="activity-row">
                                <strong>Reason:</strong>
                                <span><%= activity.reason %></span>
                            </div>
                        <% } else if (activity.type === 'Award') { %>
                            <div class="activity-row">
                                <strong>Username:</strong>
                                <span><%= activity.username %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Award:</strong>
                                <span><%= activity.details %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Submitted By:</strong>
                                <span><%= activity.submittedBy %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Date:</strong>
                                <span><%= new Date(activity.date).toLocaleString() %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Reason:</strong>
                                <span><%= activity.reason %></span>
                            </div>
                        <% } else if (activity.type === 'Placement') { %>
                            <div class="activity-row">
                                <strong>Username:</strong>
                                <span><%= activity.username %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Placement:</strong>
                                <span><%= activity.details %></span>
                            </div>
                            <div class="activity-row">
                                <strong>Placement Rank:</strong>
                                <span><%= activity.placementRank %></span>
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="no-activities">
                    <h3>No activities found.</h3>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        document.getElementById('searchInput').addEventListener('input', debounce(applyFilters, 300));
        document.getElementById('typeFilter').addEventListener('change', applyFilters);
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        document.getElementById('sortFilter').addEventListener('change', applyFilters);

        function debounce(func, wait) {
            let timeout;
            return function (...args) {
                clearTimeout(timeout);
                timeout = setTimeout(() => func(...args), wait);
            };
        }

        async function applyFilters() {
            const search = document.getElementById('searchInput').value;
            const type = document.getElementById('typeFilter').value;
            const status = document.getElementById('statusFilter').value;
            const sort = document.getElementById('sortFilter').value;

            try {
                const response = await fetch('/forms/auditlog/filter', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ search, type, status, sort })
                });

                const data = await response.json();
                if (data.success) {
                    updateActivitiesDisplay(data.activities);
                }
            } catch (error) {
                console.error('Error applying filters:', error);
            }
        }

        function updateActivitiesDisplay(activities) {
            const container = document.querySelector('.activities-list');
            
            if (activities.length === 0) {
                container.innerHTML = `
                    <div class="no-activities">
                        <h3>No activities found.</h3>
                    </div>
                `;
                return;
            }

            container.innerHTML = activities.map(activity => {
                let html = `
                    <div class="activity-card">
                        <div class="activity-row">
                            <strong>Type:</strong>
                            <span class="type-badge type-${activity.type === 'Note' ? activity.status : activity.type}">
                                ${activity.type}
                            </span>
                        </div>`;

                if (activity.type === 'Note') {
                    html += `
                        <div class="activity-row">
                            <strong>Username:</strong>
                            <span>${activity.username}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Note Type:</strong>
                            <span>${activity.status}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Content:</strong>
                            <span>${activity.details}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Added By:</strong>
                            <span>${activity.performedBy}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Date:</strong>
                            <span>${new Date(activity.date).toLocaleString()}</span>
                        </div>`;
                } else if (activity.type === 'Training') {
                    html += `
                        <div class="activity-row">
                            <strong>Trainer:</strong>
                            <span>${activity.trainer}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Trainee(s):</strong>
                            <span>${activity.trainees}</span>
                        </div>
                        <div class="activity-row">
                            <strong>XP Amount:</strong>
                            <span>${activity.xpAmount}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Date:</strong>
                            <span>${new Date(activity.date).toLocaleString()}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Status:</strong>
                            <span class="status-badge status-${activity.status.toLowerCase()}">
                                ${activity.status}
                            </span>
                        </div>`;
                } else if (activity.type === 'Promotion') {
                    html += `
                        <div class="activity-row">
                            <strong>Username:</strong>
                            <span>${activity.username}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Current Rank:</strong>
                            <span>${activity.currentRank}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Promotion Rank:</strong>
                            <span>${activity.promotionRank}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Submitted By:</strong>
                            <span>${activity.submittedBy}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Date:</strong>
                            <span>${new Date(activity.date).toLocaleString()}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Status:</strong>
                            <span class="status-badge status-${activity.status.toLowerCase()}">
                                ${activity.status}
                            </span>
                        </div>
                        <div class="activity-row">
                            <strong>Reason:</strong>
                            <span>${activity.reason}</span>
                        </div>`;
                } else if (activity.type === 'Award') {
                    html += `
                        <div class="activity-row">
                            <strong>Username:</strong>
                            <span>${activity.username}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Award:</strong>
                            <span>${activity.details}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Submitted By:</strong>
                            <span>${activity.submittedBy}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Date:</strong>
                            <span>${new Date(activity.date).toLocaleString()}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Reason:</strong>
                            <span>${activity.reason}</span>
                        </div>`;
                } else if (activity.type === 'Placement') {
                    html += `
                        <div class="activity-row">
                            <strong>Username:</strong>
                            <span>${activity.username}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Placement:</strong>
                            <span>${activity.details}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Placement Rank:</strong>
                            <span>${activity.placementRank}</span>
                        </div>
                        <div class="activity-row">
                            <strong>Date:</strong>
                            <span>${new Date(activity.date).toLocaleString()}</span>
                        </div>`;
                }

                if (activity.approvedBy && activity.type !== 'Note') {
                    html += `
                        <div class="activity-row">
                            <strong>Handled By:</strong>
                            <span>${activity.approvedBy} on ${new Date(activity.dateApproved).toLocaleString()}</span>
                        </div>`;
                }

                html += `</div>`;
                return html;
            }).join('');
        }

        // Add event listeners for filters
        document.getElementById('searchInput').addEventListener('input', debounce(applyFilters, 300));
        document.getElementById('typeFilter').addEventListener('change', applyFilters);
        document.getElementById('statusFilter').addEventListener('change', applyFilters);
        document.getElementById('sortFilter').addEventListener('change', applyFilters);
    </script>
</body>
</html>
